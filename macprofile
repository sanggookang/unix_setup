#ls colors #Only for mac
PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"
MANPATH="/usr/local/opt/coreutils/libexec/gnuman:$MANPATH"

#ls changes
alias ls="ls -N --color=yes --group-directories-first"

#custom dir colors
eval `dircolors ~/.dir_colors`

function brew(){
  if [ $# -eq 0 ]; then
    command brew
    return
  fi
  if [ "$1" == "upgrade" ]; then
    default_path
    command brew "$@"
    reset_path
  else
    command brew "$@"
  fi
}

